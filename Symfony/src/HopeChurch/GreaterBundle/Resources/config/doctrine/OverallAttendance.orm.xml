<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity
      repository-class="HopeChurch\GreaterBundle\Entity\OverallAttendanceRepository"
      name="HopeChurch\GreaterBundle\Entity\OverallAttendance"
      table="overall_attendance">
    <id name="id" type="integer" column="id">
      <generator strategy="AUTO"/>
    </id>
    <field name="date" type="date" column="date"/>
    <field name="attendeeCount" type="integer" column="attendee_count"/>
    <many-to-one field="event" target-entity="Event"
		 join-column="event" inversed-by="attendees">
      <join-column name="event_id" nullable="false"
		   referenced-column-name="id" />
    </many-to-one>
  </entity>
</doctrine-mapping>
