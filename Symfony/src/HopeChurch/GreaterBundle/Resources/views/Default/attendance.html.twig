{% extends 'HopeChurchGreaterBundle:Default:base.html.twig' %}

{% block styleblock %}
{{ parent() }}
{% stylesheets
'bundles/hopechurchgreater/libs/datepicker/css/datepicker3.css'
filter='cssrewrite' %}
<link rel="stylesheet" href="{{ asset_url }}" />
{% endstylesheets %}
{% endblock %}

{% block head_js %}
{{ parent() }}

var attendanceUrl = "{{ path('hope_church_backstage_get_attendees') }}";
var attendanceUpdateUrl = "{{ path('hope_church_backstage_update_attendees') }}";
{% endblock %}

{% block jsblock %}
{{ parent() }}

{% javascripts
'bundles/hopechurchgreater/libs/moment/js/moment.min.js'
'bundles/hopechurchgreater/libs/datepicker/js/bootstrap-datepicker.js'
'bundles/hopechurchgreater/libs/d3/js/d3.v3.min.js'
'@HopeChurchGreaterBundle/Resources/public/js/attendance.js' %}
<script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}

{% endblock %}

{% block body %}
<form class="form-horizontal" id="attendance-form">
  <div class="row">
    <div class="col-md-6">
      <div class="input-group date datepicker">
        <span class="input-group-addon">Date</span>
        <input type="text" id="date" class="form-control">
        <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
      </div>
    </div>
  </div>
<div id="attendance-tables"></div>
{#
<div class="row">
  <div class="span12">
    <h4 class="attendance-title"></h4>
    <table class="table table-bordered table-striped table-hover">
      <thead id="attendance-head">
	<tr>
	</tr>
      </thead>
      <tbody id="attendance-body">
      </tbody>
    </table>
  </div>
</div>
#}
<div class="form-actions">
  <button class="btn btn-primary" id="update-btn"
	  data-loading-text="Loading..."
	  data-saving-text="Saving...">Save</button>
  <button class="btn" id="reset-btn">Reset</button>
</div>
</form>
{% endblock %}
