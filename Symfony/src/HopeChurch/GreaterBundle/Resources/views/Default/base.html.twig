
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>
      {% block title %}Something Greater - {{ active_page|title }}{% endblock %}
    </title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Alistair King">
    
    {% block styleblock %}
    {% stylesheets 
    'bundles/hopechurchgreater/libs/bootstrap/css/bootstrap.css'
    filter='cssrewrite' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
    {% endblock %}

    <style>
      body {
      padding-top: 60px;
      }
      @media (max-width: 979px) {
      body {
      padding-top: 0;
      }
      }
    </style>

    <script type="text/javascript">
      {% block head_js %}{% endblock %}
    </script>
  </head>
  
  <body>
    <div class="navbar navbar-fixed-top navbar-inverse">
      <div class="navbar-inner">
        <div class="container">
          <ul class="nav">

	    {% for page in nav_pages %}
	    <li {% if page == active_page %} class="active" {% endif %}>
	      <a href="{{ path(route, {'page': page, '_format': 'html'}) }}">
		{{ page|title }}
	      </a>
	    </li>
	    {% endfor %}

          </ul>
        </div>
      </div>
    </div>
    
    <div class="container">
      {% block body %}{% endblock %}
    </div>
    
</div>

{% block jsblock %}
{% javascripts 
'bundles/hopechurchgreater/libs/jquery/js/jquery-1.9.1.min.js'
'bundles/hopechurchgreater/libs/bootstrap/js/bootstrap.js' 
%}
    <script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}
{% endblock %}
</body>
</html>


