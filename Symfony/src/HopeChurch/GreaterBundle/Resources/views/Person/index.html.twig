{% extends 'HopeChurchGreaterBundle:Default:base.html.twig' %}

{% block jsblock %}
  {{ parent() }}
  {% javascripts
    '@HopeChurchGreaterBundle/Resources/public/js/person/index.js'
  %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
  {% endjavascripts %}
{% endblock %}

{% block body -%}
    <div class="page-header">
      <h1>Browse People</h1>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Name</th>
                <th>Email</th>
                <th>Cell Phone</th>
                <th>Discipleship Stage</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>
                  <a href="{{ path('person_edit', { 'id': entity.id }) }}">
		    <span class="glyphicon glyphicon-edit"></span>
		  </a>
                </td>
                <td><a href="{{ path('person_show', { 'id': entity.id }) }}">
		    {{ entity.nameFirst }} {{ entity.nameLast }}</a>
		</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.phoneCell }}</td>
		<td>{{ entity.dstage }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('person_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
