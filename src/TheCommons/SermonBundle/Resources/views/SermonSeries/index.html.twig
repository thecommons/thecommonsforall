{% extends '::base.html.twig' %}

{% block body -%}
    <h1>SermonSeries list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Startdate</th>
                <th>Backgroundimg</th>
                <th>Foregroundimg</th>
                <th>Description</th>
                <th>Videourl</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('series_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{% if entity.startDate %}{{ entity.startDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.backgroundImg }}</td>
                <td>{{ entity.foregroundImg }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.videoURL }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('series_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('series_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('series_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
