{% extends '::base.html.twig' %}

{% block body -%}
    <h1>SermonSeries</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ entity.title }}</td>
            </tr>
            <tr>
                <th>Startdate</th>
                <td>{{ entity.startDate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Backgroundimg</th>
                <td>{{ entity.backgroundImg }}</td>
            </tr>
            <tr>
                <th>Foregroundimg</th>
                <td>{{ entity.foregroundImg }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Videourl</th>
                <td>{{ entity.videoURL }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('series') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('series_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
